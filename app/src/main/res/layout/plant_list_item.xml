<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="10dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_margin="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/plantImg"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:src="@drawable/login_icon" />

        <TextView
            android:id="@+id/textViewPlantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/plantImg"
            android:text="Plant X"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/EditPlantButton"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="48dp"
            android:text="Edit" />

        <ImageButton
            android:id="@+id/imageBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/EditPlantButton"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-57dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/ic_icon" />

        <ImageView
            android:id="@+id/plantSyncImg"
            android:layout_width="38dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="6dp"
            app:srcCompat="@drawable/sync" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>